# Configuration de l'environnement pour CarWash Pro

# Django settings
SECRET_KEY=votre_cle_secrete_django_ici
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de données
# Actuellement en utilisant SQLite par défaut
DATABASE_URL=sqlite:///db.sqlite3
# Pour passer à PostgreSQL, décommentez et configurez les lignes suivantes
# DATABASE_URL=postgres://user:password@localhost:5432/carwash_db

# Dossier des médias et fichiers statiques
MEDIA_URL=/media/
STATIC_URL=/static/

# Email configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# Pour passer à SMTP, décommentez et configurez les lignes suivantes
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=votre-email@gmail.com
# EMAIL_HOST_PASSWORD=votre-mot-de-passe-ou-cle-app

# Stripe (si vous prévoyez d'intégrer des paiements)
# STRIPE_PUBLIC_KEY=votre_cle_publique_stripe
# STRIPE_SECRET_KEY=votre_cle_secrete_stripe

# Environnement virtuel
VENV_PATH=/venv